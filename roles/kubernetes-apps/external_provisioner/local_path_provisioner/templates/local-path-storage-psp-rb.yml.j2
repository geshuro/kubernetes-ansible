    name: local-path-provisioner-service-account
    namespace: {{ local_path_provisioner_namespace }}
roleRef:
  kind: ClusterRole
  name: psp:{{ local_path_provisioner_psp }}
  apiGroup: rbac.authorization.k8s.io
